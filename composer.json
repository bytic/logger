{
  "name": "bytic/logger",
  "description": "Logger component for bytic",
  "authors": [
    {
      "name": "Gabriel Solomon",
      "email": "hello@gabrielsolomon.ro"
    }
  ],
  "autoload": {
    "psr-4": {
      "Nip\\Logger\\": "src/"
    },
    "classmap": [
      "legacy"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Nip\\Logger\\Tests\\": "tests/src",
      "Nip\\Logger\\Fixtures\\": "tests/fixtures"
    }
  },
  "require": {
    "php": "^7.0|^8.0",
    "bytic/config": "^0.9|^1.0",
    "bytic/container": "^0.9|^1.0|^2.0",
    "bytic/utility": "^1.0",
    "bytic/debug": "^0.9|^1.0",
    "bytic/newrelic": "^1.0",
    "monolog/monolog": "^1.2|^2.0|^3.0"
  },
  "require-dev": {
    "bytic/application": "^0.9|^1.0",
    "bytic/phpqatools": "^1.0"
  },

  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "ergebnis/composer-normalize": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "bytic/phpqatools": true
    }
  }
}
